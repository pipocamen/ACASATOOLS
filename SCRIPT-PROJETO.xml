function calculateCorrelation(dataA, dataB) {
  // Pearson correlation coefficient
  const n = dataA.length;
  const sumA = sum(dataA);
  const sumB = sum(dataB);
  const sumAB = sum(dataA * dataB);
  const sumA2 = sum(dataA^2);
  const sumB2 = sum(dataB^2);
  
  const numerator = n * sumAB - sumA * sumB;
  const denominator = sqrt((n*sumA2 - sumA^2) * (n*sumB2 - sumB^2));
  
  return numerator / denominator;
}

